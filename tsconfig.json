{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./output",

    // Environment Settings
    "target": "es6",        // Modern JavaScript
    "module": "es2015",        // Browser-friendly module system

    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Outputs
    "sourceMap": false,      // Optional: turn on if debugging
    "declaration": false,    // Browser doesnâ€™t need type declaration files
    "declarationMap": false, 

    // React Support
    "jsx": "react-jsx",

    // Style / Safety Options
    "isolatedModules": true,
    "skipLibCheck": true
  }
}